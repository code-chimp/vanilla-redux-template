{
  "name": "vanilla-redux-template",
  "version": "0.1.0",
  "private": true,
  "description": "Base React+Redux project with pre-configured static analysis",
  "keywords": [
    "react",
    "redux",
    "redux-toolkit",
    "typescript",
    "template"
  ],
  "homepage": ".",
  "repository": "github:code-chimp/vanilla-redux-template",
  "license": "BSD-3-Clause",
  "author": {
    "name": "Tim Goshinski",
    "email": "tim@code-chimp.com",
    "url": "https://code-chimp.com"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:cov": "npm test -- --coverage",
    "test:ci": "cross-env CI=true JEST_JUNIT_OUTPUT_DIR=coverage npm test -- --coverage --reporters=jest-junit",
    "format": "pretty-quick --staged",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "run-p lint:*",
    "lint:ts": "eslint ./src/**/**.ts*",
    "lint:styles": "stylelint \"./src/**/*.scss\"",
    "fix:styles": "stylelint \"./src/**/*.scss\" --fix",
    "eject": "react-scripts eject",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-brands-svg-icons": "^6.2.0",
    "@fortawesome/free-regular-svg-icons": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@reduxjs/toolkit": "^1.8.6",
    "bootstrap": "^5.2.2",
    "dayjs": "^1.11.5",
    "numeral": "^2.0.6",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.4",
    "react-router-dom": "^6.4.2",
    "react-scripts": "5.0.1",
    "redux": "^4.2.0",
    "typescript": "^4.4.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/bootstrap": "^5.2.5",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/numeral": "^2.0.2",
    "@types/prettier": "^2.7.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/redux-mock-store": "^1.0.3",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/uuid": "^8.3.4",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "8.0.1",
    "jest-junit": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "redux-mock-store": "^1.5.4",
    "sass": "^1.55.0",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "!<rootDir>/docs/",
      "!<rootDir>/node_modules/",
      "!<rootDir>/public/",
      "src/**/*.{ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/routes.tsx",
      "!src/@enums/**",
      "!src/@interfaces/**",
      "!src/@mocks/**",
      "!src/@types/**",
      "!src/services/**",
      "!src/**/*.d.ts",
      "!src/**/*.json"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 90,
        "statements": 90
      }
    }
  }
}
